scripts[] = js/jquery.browser.min.js
scripts[] = js/imagesloaded.pkgd.min.js
scripts[] = js/px-strings.js
scripts[] = js/px-video.js
scripts[] = js/script.js

stylesheets[all][] = css/px-video.css
stylesheets[all][] = css/styles.css

regions[header_menu] = Header Menu
